<tr>
	<td>
		<% if machine.attachments.exists? %>
			<%= link_to (image_tag machine.attachments.first.file.url(:small)),
							edit_machine_path(machine) %>
		<% end %>
	</td>
	<td><%= machine.make %></td>
	<td><%= machine.model %></td>
	<td><%= machine.year %></td>
	<td><%= machine.serial %></td>
	<td><%= machine.status == true ? "Active" : "Inactive" %>
	<td><%= link_to "View", machine_path(machine) %></td> 
	<td><%= link_to "Edit", edit_machine_path(machine) %></td>
	<td><%= link_to "Delete", machine, method: :delete,
									  data: { confirm: "You sure?" } %></td>
</tr>

