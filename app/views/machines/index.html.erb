<% provide(:title, 'All Machines') %>

<!-- BEGIN PAGE HEADER -->
<div class="row">
	
	<div class="col-md-12">
	
		<!-- BEGIN PAGE TITLE & BREADCRUMB -->
			<h3 class="page-title">All Equipment</h3>
			<ul class="page-breadcrumb breadcrumb">
				<li>
					<i class="icon-home"></i>
					<%= link_to "Dashboard", root_path %>
					<i class="icon-angle-right"></i>
				</li>
				<li>
					<i class="icon-cogs"></i>
					<%= link_to "All Equipment", machines_path %>
					<i class="icon-angle-right"></i>
				<li>
			</ul>
		<!-- END PAGE TITLE & BREADCRUMB -->
	
	</div>
	
</div>
<!-- END PAGE HEADER -->

<!-- BEGIN PAGE CONTENT -->
<div class="row">
	<div class="col-md-12">
			<div class="portlet box ">
				<%= form_tag delete_machines_path, method: :put do %>
                 <div class="portlet-body">
                    <div class="table-toolbar">
                       <div class="btn-group">
                          <%= link_to new_machine_path, class: "btn btn-large btn-primary" do %>
									<i class="icon-plus"></i> New
								<% end %>
							</div>
							<div class="btn-group">
								<span class="btn btn-large btn-success edit-button">
									<i class="icon-edit"></i> Edit
								</span>
							</div>
							
							<div class="btn-group">
								<%= button_tag(type: "submit", class: "delete-checkbox btn btn-large btn-danger clearfix") do %>
									<i class="icon-remove"></i> Delete
								<% end %>
							</div>
                    </div>
					
                    <table class="table table-striped table-bordered table-hover" id="machines_list">
                       <thead>
                          <tr>
                             <th class="table-checkbox delete-checkbox"><input type="checkbox" class="group-checkable" data-set="#machines_list .checkboxes" /></th>
                             <th style="width:50px;">Image</th>
									<th>Make</th>
									<th>Model</th>
									<th>Year</th>
									<th>Serial</th>
									<th>Status</th>
                          </tr>
                       </thead>
                       <tbody>
							<%= render @machines %>
							</tbody>
                    </table>

						<div class="table-toolbar">
                       <div class="btn-group">
                          <%= link_to new_machine_path, class: "btn btn-large btn-primary" do %>
									<i class="icon-plus"></i> New
								<% end %>
							</div>
							<div class="btn-group">
								<span class="btn btn-large btn-success edit-button">
									<i class="icon-edit"></i> Edit
								</span>
							</div>
							
							<div class="btn-group">
								<%= button_tag(type: "submit", class: "delete-checkbox btn btn-large btn-danger clearfix") do %>
									<i class="icon-remove"></i> Delete
								<% end %>
							</div>
                    </div>
					<% end %>
                 </div>
              </div>
			
   </div>
</div>

<!-- END PAGE CONTENT -->