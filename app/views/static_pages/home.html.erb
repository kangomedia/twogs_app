<!-- BEGIN PAGE HEADER -->
<div class="row">
	
	<div class="col-md-12">
	
		<!-- BEGIN PAGE TITLE & BREADCRUMB -->
			<h3 class="page-title">Dashboard</h3>
		<!-- END PAGE TITLE & BREADCRUMB -->
	
	</div>
	
</div>
<!-- END PAGE HEADER -->

<!-- BEGIN PAGE CONTENT -->
<div class="row">

	<div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
	
		<div class="dashboard-stat blue">
			<div class="visual">
				<i class="icon-cogs"></i>
			</div>
			<div class="details">
				<div class="number">
					Equipment
				</div>
			</div>
			<%= link_to machines_path, class: "more" do %>
				View More <i class="m-icon-swapright m-icon-white"></i>
			<% end %>
		</div>
	
	</div>
	
	<div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
	
		<div class="dashboard-stat green">
			<div class="visual">
				<i class="icon-sitemap"></i>
			</div>
			<div class="details">
				<div class="number">
					Employees
				</div>
			</div>
			<%= link_to employees_path, class: "more" do %>
				View More <i class="m-icon-swapright m-icon-white"></i>
			<% end %>
		</div>
	
	</div>
	
	<div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
	
		<div class="dashboard-stat purple">
			<div class="visual">
				<i class="icon-user"></i>
			</div>
			<div class="details">
				<div class="number">
					Users
				</div>
			</div>
			<%= link_to users_path, class: "more" do %>
				View More <i class="m-icon-swapright m-icon-white"></i>
			<% end %>
		</div>
	
	</div>
	
</div>
<!-- END PAGE CONTENT -->