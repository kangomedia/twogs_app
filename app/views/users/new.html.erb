<!-- BEGIN PAGE HEADER -->
<div class="row">
	
	<div class="col-md-12">
	
		<!-- BEGIN PAGE TITLE & BREADCRUMB -->
			<h3 class="page-title">New User</h3>
		<!-- END PAGE TITLE & BREADCRUMB -->
	
	</div>
	
</div>
<!-- END PAGE HEADER -->

<!-- BEGIN PAGE CONTENT -->
<div class="row profile">

	<div class="col-md-12">
	
		<%= form_for(@user, :html => { :multipart => true, :class => "horizontal-form" }) do |f| %>
			<% @user.build_attachment %>
			
			<%= render "user_form", :f => f %>
		  	
		<%= f.submit "Add User", class: "btn btn-large btn-primary" %>
		<% end %>
	
	</div>
	
</div>
<!-- END PAGE CONTENT -->