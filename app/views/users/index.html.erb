<!-- BEGIN PAGE HEADER -->
<div class="row">
	
	<div class="col-md-12">
	
		<!-- BEGIN PAGE TITLE & BREADCRUMB -->
			<h3 class="page-title">Users</h3>
			<ul class="page-breadcrumb breadcrumb">
				<li>
					<i class="icon-home"></i>
					<%= link_to "Dashboard", root_path %>
					<i class="icon-angle-right"></i>
				</li>
			</ul>
		<!-- END PAGE TITLE & BREADCRUMB -->
	
	</div>
	
</div>
<!-- END PAGE HEADER -->

<!-- BEGIN PAGE CONTENT -->
<div class="row">
<div class="col-md-12">

	<div class="portlet box ">
		<!-- BEGIN FORM -->
		<%= form_tag delete_users_path, method: :put do %>
		
			<!-- BEGIN PORTLET BODY -->
			<div class="portlet-body">
			
				<div class="table-toolbar">
               <div class="btn-group">
               		<%= link_to "#new_user", class: "btn btn-large btn-primary", data: {:toggle => 'modal' } do %> 
						<i class="icon-plus"></i> New
						<% end %>
					</div>
					
					<div class="btn-group">
						<span class="btn btn-large btn-success edit-button">
						<i class="icon-edit"></i> Edit
						</span>
					</div>
					
					<div class="btn-group">
						<%= button_tag(type: "submit", class: "delete-checkbox btn btn-large btn-danger clearfix") do %>
						<i class="icon-remove"></i> Delete
						<% end %>
					</div>
				</div>
				
				<div class="table-responsive">
				<table class="table table-bordered table-striped" id="users_list">
					<thead>
					<tr>
						<th class="table-checkbox delete-checkbox"><input type="checkbox" class="group-checkable" data-set="#users_list .checkboxes" /></th>
						<th>Image</th>
						<th>Name</th>
						<th>Username</th>
					</tr>
					</thead>
					
					<tbody>
					<% @users.each do |user| %>
						<tr class="odd gradeX">
						   <td class="delete-checkbox"><%= check_box_tag "user_ids[]", user.id, false, class: "checkboxes"  %></td>
							<td>
								<% if user.attachment %>
									<%= link_to (image_tag user.attachment.file.url(:small)), edit_user_path(user) %>
								<% end %>
							</td>
						   <td><%= link_to user.name, edit_user_path(user) %></td>
							<td><%= link_to user.username, edit_user_path(user) %></td>
						</tr>
					<% end %>
					</tbody>
				</table>
				
				<div class="table-toolbar">
               <div class="btn-group">
               		<%= link_to "#new_user", class: "btn btn-large btn-primary", data: {:toggle => 'modal' } do %> 
						<i class="icon-plus"></i> New
						<% end %>
					</div>
					
					<div class="btn-group">
						<span class="btn btn-large btn-success edit-button">
						<i class="icon-edit"></i> Edit
						</span>
					</div>
					
					<div class="btn-group">
						<%= button_tag(type: "submit", class: "delete-checkbox btn btn-large btn-danger clearfix") do %>
						<i class="icon-remove"></i> Delete
						<% end %>
					</div>
				</div>
			
			</div>
			<!-- END PORTLET BODY -->
	
		<% end %>
		<!-- END FORM -->
	</div>
			
			<!-- BEGIN NEW USER MODAL FORM -->
			<div id="new_user" class="modal fade" tabindex="-1" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<%= form_for(@user, :html => { :multipart => true }) do |f| %>
						<% @user.build_attachment %>
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
							<h4 class="modal-title">New User</h4>
						</div><!-- END .MODAL-HEADER -->

						<div class="modal-body">
							<div class="row">
								<div class="col-md-12">

									<%= render "user_form", :f => f %>

								</div><!-- END .COL-MD-12 -->
							</div><!-- END .ROW -->
						</div><!-- END .MODAL-BODY -->

						<div class="modal-footer">
							<%= f.submit "Create User", class: "btn btn-primary" %>

							<button type="button" class="btn default" data-dismiss="modal">
								Close
							</button>
						</div><!-- END .MODAL-FOOTER -->
					<% end %><!-- END FORM -->
					</div><!-- END MODAL-CONTENT -->
				</div><!-- END .MODAL-DIALOG -->
			</div><!-- END #RESPONSIVE -->
			<!-- END MODAL FORM -->
</div>
</div>
<!-- END PAGE CONTENT -->